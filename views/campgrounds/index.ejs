<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Campground Site!</h1>
            <p>View Our handpicked campgrounds!!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campgrounds!</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% for(var i = 0; i < campGrounds.length; i++){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img id="thumbnailHeight" src="<%= campGrounds[i].img; %>" alt="" />
                    <div class="caption">
                        <h4><%= campGrounds[i].name; %></h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campGrounds[i]._id %> ">More Info</a>
                    </p>
                </div>
            </div>
        <% } %>
    </div>
</div>



<% include ../partials/footer %>
